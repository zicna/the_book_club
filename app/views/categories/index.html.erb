<div>
    <% @categories.each do |category| %>
        <div class="category">
            <p>
                <strong><%= link_to category.name, category_path(category) %></strong> 
            </p>
             <p>
                (total of: <%= pluralize(count_books_by_category(category), "Book") %> )
            </p>
        </div>
        

    <% end %>
    <%= link_to "Create new Category", new_category_path, class:"btn btn-success" if is_admin? %>
</div>
