<table>
    <tr>
       <th> Author</th>
       <th>Title</th>
       <th>Category</th>
       <th>Price</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <th><%= link_to book.author.full_name, author_path(book.author) %></th>
        <th><%= link_to book.title, book_path(book) %></th>
        <th><%= link_to book.category.name, category_path(book.category) %></th>
        <th><%= book.price %></th>
    </tr>
    <% end %>
</table>

<%= link_to "Create New Book", new_book_path %>