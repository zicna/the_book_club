<h1>this is book show page</h1>

<%= link_to "Back to all Books", books_path %>
<p>Book title: <%= @book.title %></p>
<p>Book author: <%= link_to @book.author.full_name, author_path(@book.author) if @book.author %></p>
<p>Category: <%= link_to @book.category.name, category_path(@book.category) if @book.category %></p>
<%= content_tag :div if is_admin? do %>
    <%= link_to "Edit Book", edit_book_path(@book) %>
    <%= link_to "Delete Book", book_path(@book), method: :delete%>
<% end %>
<%= link_to "All Reviews for '#{@book.title}' book", book_reviews_path(@book.id)%>
<hr>

<h4>Reviews:</h4>
<%= render partial: "reviews/review", collection: @reviews %>
<hr>

<%= render partial: 'reviews/form', locals: {
    review: Review.new,
    book: @book,
    user: current_user
} %>

