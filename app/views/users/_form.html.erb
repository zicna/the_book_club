
<%= display_errors(user) %>
<%= form_for user do |f| %>
    <div class="row">
        <div class="col">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class:"form-control", :required =>true %>
        </div>
        <div class="col">
            <%= f.label :last_name %>
            <%= f.text_field :last_name,class:"form-control", :required =>true %>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <%= f.label :email %>
            <%= f.text_field :email,class:"form-control",placeholder:"example@something.com",:required => true %>
        </div>
        <div class="col">
            <%= f.label :birth_date, "Date ofbirth (optional)" %>
            <%= f.date_field :birth_date,class:"form-control",placeholder:"mm/dd/yyyy" %>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <%= f.label :password%>
            <%= f.password_field :password,class:"form-control",placeholder:"***************",:required => true %>
        </div>
        <div class="col">
            <%= f.label :password_confirmation %>
            <%= f.password_field:password_confirmation,class:"form-control",placeholder:"***************",:required => true %>
        </div>
    </div>

   <div> <%= f.submit class:"btn btn-success" %></div>
<% end %>