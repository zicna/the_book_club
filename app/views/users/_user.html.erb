<% if user %>
    <div class="user">
        <h3><%= link_to user.full_name, user_path(user) %></h3>
        <p>Email: <b><%= user.email %></b></p>
        <p>Date of birth: <b><%= user.format_date if user.birth_date %></b></p>
        <p>Member since: <b><%= user.member_since%></b></p>
    
        <div>
            <%= link_to "Edit", edit_user_path(user), class:"edit-del" %> |
            <%= link_to "Delete", user_path(user), method: :delete, class:"edit-del" %>
        </div>
    </div>

<% end %>