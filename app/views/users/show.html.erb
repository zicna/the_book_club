<div>
    <%= render partial: 'user', locals: {user: @user} %>
    <%= render partial: 'user_reviews', locals: {user: @user} %>

<p>
    Books added (total of <%= @books.count %> ):
</p> 
    <ul>
        <% @books.each do |book| %>
            <li>
                <%= link_to book.title, book_path(book)%>
            </li>
        <% end %>
    </ul>
<p>
    Categories added (total of <%= @categories.count %> ):
</p>
    <ul>
        <% @categories.each do |category| %>
            <li>
                <%= link_to category.name, category_path(category)%>
            </li>
        <% end %>
    </ul>
<p>
    Authors added (total of <%= @authors.count %> ):
</p> 
    <ul>
        <% @authors.each do |book| %>
            <li>
                <%= link_to book.title, book_path(book)%>
            </li>
        <% end %>
    </ul>
</div>



