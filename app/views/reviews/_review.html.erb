<%= content_tag :div, 'text' do %> 
    <%= content_tag :p, review.user.full_name %>
    <%= content_tag :p, review.book.title %>
    <%= content_tag :p, review.content %>
    <%= content_tag :p, review.mark %>
    <% if current_user == review.user || is_admin? %>
        <%= content_tag :div, 'text'  do %>
        <%= link_to '(Edit)', edit_book_review_path(review.book, review) %>
        <%= link_to '(Delete)', book_review_path(review.book, review), method: :delete %>
        <% end %>
    <% end %>
<% end %>

