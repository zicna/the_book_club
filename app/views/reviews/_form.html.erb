<div>Create new review:
    <%= form_for review, url: reviews_path, method: :post do |r| %>
        <%= r.hidden_field :book_id, value: book.id %>
        <%= r.hidden_field :user_id, value: user.id %>
        <div>
            <%= r.label :content %>
            <%= r.text_area :content %>
        </div>
        <div>
            <%= r.label :mark %>
            <%= r.number_field :mark %>
        </div>
        <div>
            <%= r.submit "Create Review" %>
        </div>
    <% end %>
</div>