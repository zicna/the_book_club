<div>Create new review:
    <%= display_errors(review) %>
   
    <%= form_for ([book, review]) do |r| %>
        <%= r.hidden_field :book_id, value: book.id %>
        <%= r.hidden_field :user_id, value: user.id %>
        <div>
            <%= r.label :content %>
            <%= r.text_area :content %>
        </div>
        <div>
            <%= r.label :mark %>
            <%= r.number_field :mark %>
        </div>
        <div>
            <%= r.submit class:"btn btn-success"  %>
        </div>
    <% end %>
</div>