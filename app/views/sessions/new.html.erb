<div class="form-container login-form">
    <%= form_for( :user, {
        controller: "sessions",
        action: "create",
        method: "post"
    }) do |f| %>
    
    <div class="col">
        <%= f.label :email %>        
        <%= f.email_field :email, class:"form-control" %>
        <%= f.label :password %>
        <%= f.password_field :password, class:"form-control" %>
        <%= f.submit "Log in", class:"btn btn-success" %>        
    </div>

    <% end %>
</div>


